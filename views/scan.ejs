<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Barcode Scanner</title>
  <style>
      body {
        background-image: url('http://www.doc.gold.ac.uk/usr/208/images/barback.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        color: white;
      }
    h1 {
      font-size: 1.5rem;
      text-align: center;
      margin-top: 2rem;
    }
    form {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin: 2rem 0;
      padding: 0 1rem;
    }
    label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: bold;
      text-align: left;
    }
    input[type="text"],
    input[type="number"],
    input[type="submit"] {
      padding: 0.5rem;
      border: none;
      border-radius: 0.5rem;
      background-color: #f0f0f0;
      width: 100%;
      box-sizing: border-box;
      margin-bottom: 1rem;
      font-size: 1rem;
    }
    input[type="submit"] {
      background-color: #0077cc;
      color: #fff;
      font-weight: bold;
      cursor: pointer;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 2rem 0;
      font-size: 1rem;
    }
    th {
      background-color: #0077cc;
      color: #fff;
      text-align: left;
      padding: 0.5rem;
    }
    td {
      border-bottom: 1px solid #ccc;
      padding: 0.5rem;
    }
  </style>
  <script>
    function fetchItemName() {
      const barcode = document.getElementById('barcode_id').value;
      if (barcode) {
        fetch(`api/items/${barcode}`)
          .then(response => {
            if (response.status === 404) {
              return '';
            } else {
              return response.text();
            }
          })
          .then(itemName => {
            const strippedName = itemName.replace(/(<([^>]+)>)/gi, '');
            document.getElementById('name').value = strippedName;
            document.getElementById('message').textContent = `Item name for barcode ID ${barcode}: ${strippedName}.`;
          });
      }
    }
    function showInventory() {
      const name = document.getElementById('name').value;
      const quantity = document.getElementById('quantity').value;
      const table = document.getElementById('inventory');
      const row = table.insertRow();
      const nameCell = row.insertCell(0);
      const quantityCell = row.insertCell(1);
      nameCell.innerHTML = name;
      quantityCell.innerHTML = quantity;
    }
  </script>
</head>
<body>
  <h1>Enter Item Details</h1>
  <form method="POST" action="/addinventory">
    <label for="barcode_id">Barcode ID:</label>
    <input type="text" id="barcode_id" name="barcode_id" required oninput="fetchItemName()">
    <label for="name">Item Name:</label>
    <input type="text" id="name" name="name" required readonly>
    <label for="quantity">Quantity:</label>
    <input type="number" id="quantity" name="quantity" required>
    <button type="submit" onclick="showInventory()">Add Inventory</button>
  </form>

  <h2>Inventory</h2>
  <table id="inventory">
    <tr>
      <th>Item Name</th>
      <th>Quantity</th>
    </tr>
  </table>
  <footer>
    <a href="/index">Home</a>

  </footer>
</body>
</html>
